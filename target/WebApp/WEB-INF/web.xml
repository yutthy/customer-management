<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <context-param>
    <param-name>file-upload</param-name>
    <param-value>src/main/webapp/upload/</param-value>
    <description>Location to store uploaded file</description>
  </context-param>

  <filter>
    <filter-name>MyFilter</filter-name>
    <filter-class>com.myproject.webapp.MyFilter</filter-class>
  </filter>


  <filter-mapping>
    <filter-name>MyFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>


  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.myproject.webapp.Login</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Upload</servlet-name>
    <servlet-class>com.myproject.webapp.Upload</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>com.myproject.webapp.Logout</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ErrorHandler</servlet-name>
    <servlet-class>com.myproject.webapp.ErrorHandler</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>GetCustomers</servlet-name>
    <servlet-class>com.myproject.webapp.GetCustomersServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>DeleteCustomer</servlet-name>
    <servlet-class>com.myproject.webapp.DeleteCustomerServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>GetCustomerByID</servlet-name>
    <servlet-class>com.myproject.webapp.GetCustomerByIDServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SaveUpdateCustomerServlet</servlet-name>
    <servlet-class>com.myproject.webapp.SaveUpdateCustomerServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>DeleteCustomer</servlet-name>
    <url-pattern>/deleteCustomer</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>GetCustomerByID</servlet-name>
    <url-pattern>/getCustomerByID</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SaveUpdateCustomerServlet</servlet-name>
    <url-pattern>/saveUpdateCustomer</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>GetCustomers</servlet-name>
    <url-pattern>/getCustomers</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Upload</servlet-name>
    <url-pattern>/upload</url-pattern>
  </servlet-mapping>

  <!-- servlet mappings -->
  <servlet-mapping>
    <servlet-name>ErrorHandler</servlet-name>
    <url-pattern>/errorHandler</url-pattern>
  </servlet-mapping>


  <session-config>
    <!-- 15mintue  default value is 30min -->
    <session-timeout>15</session-timeout>
  </session-config>


  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>


  <error-page>
    <error-code>404</error-code>
    <location>/errorHandler</location>
  </error-page>

  <error-page>
    <error-code>401</error-code>
    <location>/errorHandler</location>
  </error-page>

  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/errorHandler</location>
  </error-page>


</web-app>
